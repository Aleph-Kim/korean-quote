<div class="max-w-xl mx-auto bg-white border border-gray-200 rounded-lg shadow-sm p-6 space-y-6">
  <!-- 페이지 제목 -->
  <h1 class="text-bold text-xl mb-4">
    명언 상세
  </h1>

  <form action="/admin/detail/<%- quote.id %>" method="POST" class="space-y-4">
    <!-- 명언 본문 -->
    <div id="body" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:outline-none focus:ring-1 focus:ring-blue-500" contenteditable="true" oninput="syncContent()" style="min-height: 6rem;">
      <%- quote.body %>
    </div>

    <!-- 작성자 -->
    <div>
      <label for="author" class="block text-sm font-medium text-gray-700">
        작성자
      </label>
      <input type="text" id="author" name="author" value="<%- quote.author %>" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-blue-500 focus:border-blue-500" required />
    </div>

    <!-- 작성자 프로필 -->
    <div>
      <label for="authorProfile" class="block text-sm font-medium text-gray-700">
        작성자 정보
      </label>
      <input type="text" id="authorProfile" name="authorProfile" value="<%- quote.authorProfile %>" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2 focus:ring-blue-500 focus:border-blue-500" />
    </div>

    <!-- 생성일 / 마지막 수정일 -->
    <div class="text-sm text-gray-600">
      <p>
        생성일:
        <span class="font-semibold"><%- quote.createdAt %></span>
      </p>
      <p class="mt-1">
        마지막 수정일:
        <span class="font-semibold"><%- quote.updatedAt %></span>
      </p>
    </div>

    <div class="flex space-x-4 pt-4">
      <!-- 저장하기 -->
      <button type="submit" class="flex-1 bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-md transition-colors">
        저장하기
      </button>

      <!-- 뒤로가기 -->
      <a href="javascript:history.back()" class="flex-1 text-center bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-2 px-4 rounded-md transition-colors">
        취소
      </a>
    </div>
  </form>
</div>